# ==========================================
# Tooldo API - Sensitive Variables
# ==========================================
# IMPORTANT:
#   1. Copy this file to secrets.tfvars
#   2. Fill with real values
#   3. NEVER commit secrets.tfvars to git!
# ==========================================

# ==========================================
# Database Credentials (RDS PostgreSQL)
# ==========================================
# Onde encontrar:
#   - AWS Console → RDS → tooldo-db → Configuration
#   - Ou: aws secretsmanager get-secret-value --secret-id rds!db-88e2c3ab-7e5b-4a52-835b-83d97a389c6b
#
# Username do banco de dados PostgreSQL
db_user = "postgres"

# Senha do banco de dados PostgreSQL
# IMPORTANTE: Use a senha ATUAL do RDS
db_password = "SuaSenhaSeguraDoRDS123!"

# ==========================================
# JWT Secret
# ==========================================
# Chave secreta para assinatura de tokens JWT
#
# Requisitos:
#   - Mínimo 32 caracteres
#   - Use caracteres aleatórios (letras, números, símbolos)
#   - NUNCA compartilhe ou exponha esta chave
#
# Para gerar uma nova:
#   openssl rand -base64 48 | tr -d "=+/" | cut -c1-64
#
# Onde encontrar a atual:
#   - AWS Secrets Manager → tooldo/jwt/secret
#   - Ou: aws secretsmanager get-secret-value --secret-id tooldo/jwt/secret
#
jwt_secret = "seu-jwt-secret-super-seguro-min-32-caracteres-aleatorios-123456"

# ==========================================
# Resend API Key
# ==========================================
# Chave da API do Resend para envio de emails
#
# Onde obter:
#   - Dashboard Resend: https://resend.com/api-keys
#   - Criar nova chave com permissões de envio
#
# Formato: re_xxxxxxxxxxxxxxxxxxxxxxxxxx
#
# Onde encontrar a atual:
#   - AWS Secrets Manager → tooldo/resend/api-key (se já existe)
#   - Ou criar nova no dashboard do Resend
#
resend_api_key = "re_123456789_abcdefghijklmnopqrstuvwxyz"

# ==========================================
# Instruções de Uso
# ==========================================
#
# 1. Copiar este arquivo:
#    cp secrets.tfvars.example secrets.tfvars
#
# 2. Editar secrets.tfvars com valores reais:
#    nano secrets.tfvars
#
# 3. Verificar que está no .gitignore:
#    git status  # secrets.tfvars NÃO deve aparecer
#
# 4. Usar com Terraform:
#    terraform plan -var-file="secrets.tfvars"
#    terraform apply -var-file="secrets.tfvars"
#
#    Ou usar Makefile:
#    make plan
#    make apply
#
# ==========================================
# Segurança
# ==========================================
#
# ✅ secrets.tfvars está no .gitignore
# ✅ Nunca compartilhe este arquivo
# ✅ Faça backup seguro (1Password, LastPass, etc)
# ✅ Rotacione secrets periodicamente
# ✅ Use valores diferentes para dev/staging/prod
#
# ==========================================
