# =================================
# WEEDU API - Environment Variables
# =================================

# =================================
# Application
# =================================
NODE_ENV=development
PORT=3000

# =================================
# Database (PostgreSQL)
# =================================
# Local development (Docker)
DATABASE_URL="postgresql://weedu:weedu123@localhost:5433/weedu_db?schema=public"

# Production (AWS RDS example)
# DATABASE_URL="postgresql://user:password@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/weedu_prod?schema=public"

# =================================
# Security
# =================================
# JWT Secret (CHANGE IN PRODUCTION - min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=7d

# =================================
# CORS
# =================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# AWS (quando aplic√°vel)
# =================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=

# =================================
# Logging
# =================================
LOG_LEVEL=debug
# Options: error, warn, log, debug, verbose

# =================================
# Rate Limiting
# =================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# =================================
# Swagger/OpenAPI
# =================================
# Disable in production for security
SWAGGER_ENABLED=true
